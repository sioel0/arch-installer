#!/bin/bash

declare -a options=(
"logout"
"reboot"
"poweroff"
)
CHOICE=$(printf '%s\n' "${options[@]}" | tofi -c /home/sioel0/.config/tofi/shutdown)

case $CHOICE in
  'logout')
    hyprctl dispatch exit
  ;;
  'reboot')
    sudo reboot
  ;;
  'poweroff')
    sudo poweroff
  ;;
  *)
    exit 0
  ;;
esac
